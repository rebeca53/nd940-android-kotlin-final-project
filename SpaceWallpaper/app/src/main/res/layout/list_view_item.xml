<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
<!--    <data>-->
<!--        <variable-->
<!--            name="spaceImage"-->
<!--            type="om.rebeca.spacewallpaper.SpaceImage" />-->
<!--    </data>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/textViewCodename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/downloadButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="space image name"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="bottom" />
<!--        android:text="@{spaceImage.codename}"-->
<!--        android:contentDescription="@{spaceImage.codename}"-->

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toStartOf="@+id/downloadButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewCodename"
            tools:text="2020-08-09"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:gravity="bottom" />
<!--        android:text="@{spaceImage.creationDate}"-->
<!--        android:contentDescription="@{spaceImage.creationDate}"-->

        <ImageButton
            android:id="@+id/downloadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="bottom"
            android:background="#00555555"
            android:src="@android:drawable/stat_sys_download_done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>